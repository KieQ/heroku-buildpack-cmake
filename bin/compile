#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

# make bin directory to hold the temporary files
cd $BUILD_DIR
mkdir bin
cd bin

# cmake
echo "-----> Compiling with CMake"
cmake .. -DCMAKE_BUILD_TYPE=Release

echo "-----> Install with make"
make
make install
rm -rf bin
